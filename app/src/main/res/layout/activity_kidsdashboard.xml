<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kid1"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".kidsdashboard">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="295dp"
        android:layout_height="133dp"
        android:layout_above="@id/dashboard"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:src="@drawable/logokid" />

    <TextView
        android:id="@+id/dashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text=" WELCOME TO KIDS PLAY  ALPHABET"
        android:textColor="@color/blue"
        android:textSize="35dp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/apple"
            android:layout_width="134dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_marginLeft="0dp"
            android:src="@drawable/apple1" />

        <ImageView
            android:id="@+id/ball2"
            android:layout_width="134dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/ball2" />
        <ImageView
            android:id="@+id/cat3"
            android:layout_width="134dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/cat3" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/duck4"
            android:layout_width="134dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_marginLeft="0dp"
            android:src="@drawable/duck4" />

        <ImageView
            android:id="@+id/ele5"
            android:layout_width="134dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/ele5" />
        <ImageView
            android:id="@+id/fish6"
            android:layout_width="134dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/fish6" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/girl"
            android:layout_width="134dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_marginLeft="0dp"
            android:src="@drawable/girl" />

        <ImageView
            android:id="@+id/hen"
            android:layout_width="134dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/hen" />
        <ImageView
            android:id="@+id/ink"
            android:layout_width="134dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/ink" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/jug"
            android:layout_width="134dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_marginLeft="0dp"
            android:src="@drawable/jug" />

        <ImageView
            android:id="@+id/kite"
            android:layout_width="134dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/kite" />
        <ImageView
            android:id="@+id/lion1"
            android:layout_width="134dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/lion1" />

    </LinearLayout>







</LinearLayout>